<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" alignment="CENTER" minHeight="250.0" minWidth="300.0" spacing="15" style="-fx-background-color: #000000; -fx-padding: 20;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <!-- Título del Juego -->
    <Label style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #FF4500;" text="Ahorcado" />

    <!-- Subtítulo -->
    <Label style="-fx-font-size: 16px; -fx-text-fill: #FF6347;" text="Introduce tu nickname" />

    <!-- Campo de texto para el nickname -->
    <TextField fx:id="nicknameTextField" promptText="Tu Nickname"
               style="-fx-background-radius: 10;
                      -fx-border-radius: 10;
                      -fx-border-color: #FF4500;
                      -fx-background-color: #2F2F2F;
                      -fx-prompt-text-fill: #FF6347;
                      -fx-font-size: 14px;
                      -fx-text-fill: white;" />

    <!-- Botón de jugar -->
    <Button onAction="#handleLogin"
            style="-fx-background-color: #FF6347;
                   -fx-text-fill: white;
                   -fx-font-size: 16px;
                   -fx-background-radius: 10;
                   -fx-pref-width: 150px;"
            text="Jugar" />
</VBox>
