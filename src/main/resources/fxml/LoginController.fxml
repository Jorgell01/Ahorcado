<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" alignment="CENTER" minHeight="250.0" minWidth="300.0" spacing="15" style="-fx-background-color: #4B0082; -fx-padding: 20;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <!-- Título del Juego -->
    <Label style="-fx-font-size: 36px; -fx-font-weight: bold;" text="Ahorcado" textFill="white" />

    <!-- Subtítulo -->
    <Label style="-fx-font-size: 16px;" text="Introduce tu nickname" textFill="white" />

    <!-- Campo de texto para el nickname -->
    <TextField fx:id="nicknameTextField" promptText="Tu Nickname" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #9370DB; -fx-background-color: #D8BFD8;" />

    <!-- Botón de jugar -->
    <Button onAction="#handleLogin" style="-fx-background-color: #9370DB; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10; -fx-pref-width: 150px;" text="Jugar" />
</VBox>
